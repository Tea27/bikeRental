
@model bikeRental.Application.Models.Order.OrderModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mx-4 pt-2">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>Create</h1>
            <h4>order</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="RentalEndTime" class="control-label"></label>
                    <input asp-for="RentalEndTime" class="form-control" />
                    <span asp-validation-for="RentalEndTime" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-light" asp-controller="Orders" asp-action="Create" asp-route-bicyclePrice="@Model.Bicycle.Price">Back to Full List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
